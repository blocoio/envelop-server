<% hide_shaddow_class = defined?(hide_shadow) && hide_shadow && 'ev-navbar--no-shadow' %>
<% fixed_class = defined?(fixed) && fixed && 'ev-navbar--fixed' %>

<nav class="ev-navbar <%= hide_shaddow_class %> <%= fixed_class %>">
  <a class="ev-navbar__logo" href="/">
    <%= image_tag('logo.svg', alt: 'envelop') %>
  </a>
  <ul class="ev-navbar__items">
    <li class="ev-navbar__item js-navbar-user"></li>
    <% if defined?(product_hunt) && product_hunt %>
      <li class="ev-navbar__item">
        <div class="ev-navbar__production-hunt">
          <%= partial :product_hunt %>
        </div>
      </li>
    <% end %>
  </ul>
</nav>
<div class="js-banner"></div>
